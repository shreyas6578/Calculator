<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:orientation="vertical"
    android:layout_marginTop="35dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:gravity="end"
        android:text=""
        android:layout_marginTop="30dp"
        android:textSize="36sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@android:color/darker_gray"
        android:gravity="right"
        android:text=""
        android:textColor="#000000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:text="History" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/clear_text"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#FF8D00"
            android:text="@string/ac"
            android:textColor="#FFFFFF"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#457B9D"
            android:text="%"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="*"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="⌫"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
          >

        <Button
            android:id="@+id/seven_7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="7"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/eigth_8"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="8"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/nine_9"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="9"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="-"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="70sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/four_4"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="4"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/five_5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="5"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/six_6"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="6"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="+"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="60sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/one_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="1"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/Two_2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="2"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/three_3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="3"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/square_root"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="√"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="50sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/bracket"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="( )"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="45sp" />

        <Button
            android:id="@+id/zero_0"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="0"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="34sp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="#424040"
            android:text="."
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="60sp" />

        <Button
            android:id="@+id/ans"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="="
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="60sp" />
    </TableRow>




</LinearLayout>